{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDirs": [
      "src/server",
      "src/worker"
    ]
  },
  "exclude": [
    "node_modules",
    "src/client"
  ]
}
